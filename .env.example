# Notion Configuration
NOTION_TOKEN=

# Single Database (optional)
NOTION_DATABASE_ID=

# Multiple Databases mapping (comma OR JSON)
NOTION_DATABASE_MAPPING={"Andbank":"database-id","Caixa":"database-id"}

# Data Source selection: mock-http | sftp | mock-sftp
DATA_SOURCE=sftp

# Mock HTTP service
MOCK_BANK_URL=http://localhost:3000

# SFTP configuration
SFTP_HOST=localhost
SFTP_PORT=2222
SFTP_USERNAME=andbank
SFTP_PASSWORD=sftp-test
SFTP_REMOTE_PATH=/loans.csv
AUTO_START_MOCK_SFTP=true

# Mock SFTP server options (used when auto-starting locally)
MOCK_SFTP_PORT=2222
MOCK_SFTP_HOST=0.0.0.0
MOCK_SFTP_ROOT=data
MOCK_SFTP_USER=andbank
MOCK_SFTP_PASS=sftp-test

# Scheduler (minutes, 0 = run once)
SYNC_INTERVAL_MINUTES=15
